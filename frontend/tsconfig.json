{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@public/*": ["public/*"],
      "@redux/*": ["redux/*"],
      "@mock/*": ["mock/*"],
      // "@pages/*": ["pages/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/admin/componentsAdmin/Navbar/Navbar.jsx",
    ".next/types/**/*.ts",
    "components/componentsAdmin/Navbar/NavBar.text.jsx"
  ],
  "exclude": ["node_modules"]
}
